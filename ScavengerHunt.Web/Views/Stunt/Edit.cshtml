@using ScavengerHunt.Web.Models
@model ScavengerHunt.Web.Models.Stunt

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Stunt</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        
        <div class="mb-3 col-md-3">
            @Html.LabelFor(model => model.Keyword, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.Keyword, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Keyword)
        </div>

        <div class="mb-3 col-md-2">
            @Html.LabelFor(model => model.MaxScore, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.MaxScore, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MaxScore)
        </div>

        <div class="mb-3 col-md-3">
            @Html.LabelFor(model => model.Type, new { @class = "control-label" })
            @Html.EditorFor(model => model.Type)
            @Html.ValidationMessageFor(model => model.Type)
        </div>
        
        <div class="mb-3">
            @Html.LabelFor(model => model.Published, new { @class = "control-label col-md-2" })
            @Html.CheckBoxFor(model => model.Published)
            @Html.ValidationMessageFor(model => model.Published)
        </div>
        
        <div class="mb-3">
            @Html.LabelFor(model => model.Collapsible, new { @class = "control-label col-md-2" })
            @Html.CheckBoxFor(model => model.Collapsible)
            @Html.ValidationMessageFor(model => model.Collapsible)
        </div>
        
        <div class="mb-3">
            @Html.LabelFor(model => model.JudgeNotes, new { @class = "control-label" })
            @Html.TextAreaFor(model => model.JudgeNotes, new { @class = "form-control", @style = "height: 200px" })
            <span class="text-muted"><span class="icon-info"></span>Supports <a href="https://github.com/adam-p/markdown-here/wiki/Markdown-Cheatsheet">Markdown</a>.</span>
            @Html.ValidationMessageFor(model => model.JudgeNotes)
        </div>

        <div class="mb-3">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<h4>Translations</h4>
@Html.Action("IndexPartial", "StuntTranslation", new { id = Model.Id })


<div>
    @Html.ActionLink("Back to List", "IndexAdmin")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
